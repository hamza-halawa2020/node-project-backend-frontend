<%- include('../partials/header') -%>
    <%- include('../partials/navbar') -%>

        <div class="container mt-5 ">
            <div class="h1 text-center w-50 mx-auto">
            <a class=" nav-link btn btn-warning" href="/create">Add New Task</a>
        </div>
            <%- include('../partials/flashmessages') -%>

            <% card.forEach((events)=> { %>
                <div class="row">


                    <% events.forEach((event)=> { %>
                        <div class="col-12 col-md-4">
                            <div class="card mt-5 border border-warning">
                                <div class="card-body">
                                    <h5 class="card-title text-center border border-warning rounded w-50 mx-auto">
                                        <%= event.title %>
                                    </h5>
                                    <p class="card-text text-truncate">
                                        <%= event.description %>
                                    </p>
                                    <p class="card-text">
                                        <%= event.location %>
                                    </p>
                                    <a href="<%= '/' + event.id %>" class="btn btn-warning w-100">Show More</a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <% }) %>
        </div>


        <%- include('../partials/footer') -%>